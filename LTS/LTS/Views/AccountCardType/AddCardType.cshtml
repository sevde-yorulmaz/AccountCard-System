@using EntityLayer.Concrete;
@model AccountCardType
@{
    ViewData["Title"] = "AddCardType";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Hesap Kart Tipi Ekleme Formu</h1>

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card-box">

                        <div class="row">
                            <div class="col-lg-6">

                                <h4 class="header-title">Yeni Hesap Kart Tipi Ekleme</h4>

                                <div class="p-4">
                                    <form asp-controller="AccountCardType" asp-action="AddCardType" method="post" data-parsley-validate novalidate>
                                        <div class="form-group">
                                            <label for="TypeName">Tip Adı</label>
                                            <input asp-for="TypeName" type="text" name="TypeName" parsley-trigger="change" required placeholder="Tip Adı" class="form-control" id="TypeName" />
                                        </div>


                                        <div class="form-group text-right mb-0">
                                            <button class="btn btn-primary waves-effect waves-light" type="submit">
                                                Yeni Hesap Kart Tipi Ekle
                                            </button>

                                        </div>

                                    </form>

                                    <a asp-controller="AccountCardType" asp-action="Index" class="btn btn-outline-orange btn-rounded waves-light waves-effect width-md"> Hesap Kart Tipi Listesine Geri Dön</a>

                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


