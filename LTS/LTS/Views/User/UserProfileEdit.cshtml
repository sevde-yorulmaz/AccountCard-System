@model InformationUser
@{
    ViewData["Title"] = "UserProfileEdit";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Giriş Yapan Kullanıcı Bilgilerini Güncelleme Formu</h1>
<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="card-box">

                        <div class="row">
                            <div class="col-lg-6">

                                <h4 class="header-title">Sisteme Giren Kişinin Bilgileri Güncelleme </h4>

                                <div class="p-4">
                                    <form asp-controller="User" asp-action="UserProfileEdit" method="post" data-parsley-validate novalidate>
                                         <div class="form-group">
                                            <label asp-for="@Model.user.Name"> Adı</label>
                                            <input asp-for="@Model.user.Name" type="text" name="Name" parsley-trigger="change" required placeholder="" class="form-control" id="Name">
                                        </div>
                                         <div class="form-group">
                                            <label asp-for="@Model.user.SurName"> Soyadı</label>
                                            <input asp-for="@Model.user.SurName" type="text" name="SurName" parsley-trigger="change" required placeholder="" class="form-control" id="SurName">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.user.UserName">Kullanıcı Adı</label>
                                            <input asp-for="@Model.user.UserName" type="text" name="UserName" parsley-trigger="change" required placeholder="" class="form-control" id="UserName">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.user.Email">Mail Adresi</label>
                                            <input asp-for="@Model.user.Email" type="Email" name="Email" parsley-trigger="change" required placeholder="" class="form-control" id="Email">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.user.PhoneNumber">Telefon Numarası</label>
                                            <input asp-for="@Model.user.PhoneNumber" id="PhoneNumber" name="PhoneNumber" required placeholder="" class="form-control">
                                        </div>
                                        
                                        <div class="form-group text-right mb-0">
                                            <button class="btn btn-primary waves-effect waves-light" type="submit">
                                                Güncelle
                                            </button>

                                        </div>

                                    </form>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


