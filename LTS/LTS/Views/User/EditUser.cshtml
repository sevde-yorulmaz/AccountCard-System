@model EditUserViewModel
@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Kullanıcı Bilgileri Güncelleme Formu</h1>

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="card-box">

                        <div class="row">
                            <div class="col-lg-6">

                                <h4 class="header-title">Kullanıcı Bilgileri Güncelleme</h4>

                                <div class="p-4">
                                    <form asp-controller="User" asp-action="EditUser" method="post" data-parsley-validate novalidate>
                                        <div class="form-group">
                                            <label asp-for="@Model.name">Adı</label>
                                            <input asp-for="@Model.name" type="text" name="name" parsley-trigger="change" required placeholder="Ad" class="form-control" id="name">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.surname">Soyad</label>
                                            <input asp-for="@Model.surname" type="text" name="surname" parsley-trigger="change" required placeholder="Soyad" class="form-control" id="surname">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.mail"></label>
                                            <input asp-for="@Model.mail" type="email" name="mail" parsley-trigger="change" required placeholder="Mail Adresi" class="form-control" id="email">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.username">Kullanıcı Adı</label>
                                            <input type="hidden" asp-for="@Model.Id" />
                                            <input asp-for="@Model.username" type="text" id="username" name="username" placeholder="Kullanıcı Adı" rows="3" required class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.phone">Telefon Numarası</label>
                                            <input asp-for="@Model.phone" type="text" name="phone" parsley-trigger="change" required placeholder="Telefon Numarası" class="form-control" id="phone">
                                        </div>


                                        <div class="form-group text-right mb-0">
                                            <button class="btn btn-primary waves-effect waves-light" type="submit">
                                                Güncelle
                                            </button>

                                        </div>

                                    </form>
                                </div>
                                <a asp-controller="User" asp-action="GetUser" class="btn btn-outline-orange btn-rounded waves-light waves-effect width-md">Kullanıcı Listesine Geri Dön</a>


                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

