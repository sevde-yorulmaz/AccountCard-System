@using EntityLayer.Concrete;
@model AccountCardKind
@{
    ViewData["Title"] = "AddCardKind";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Hesap Kart Türü Ekleme Formu</h1>

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card-box">

                        <div class="row">
                            <div class="col-lg-6">

                                <h4 class="header-title">Yeni Hesap Kart Türü Ekleme</h4>

                                <div class="p-4">
                                    <form asp-controller="AccountCardKind" asp-action="AddCardKind" method="post" data-parsley-validate novalidate>
                                        <div class="form-group">
                                            <label for="KindName">Tür Adı</label>
                                            <input asp-for="KindName" type="text" name="KindName" parsley-trigger="change" required placeholder="Tür Adı" class="form-control" id="KindName" />
                                        </div>


                                        <div class="form-group text-right mb-0">
                                            <button class="btn btn-primary waves-effect waves-light" type="submit">
                                                Yeni Hesap Kart Türü Ekle
                                            </button>

                                        </div>

                                    </form>
                                    <a asp-controller="AccountCardKind" asp-action="Index" class="btn btn-outline-orange btn-rounded waves-light waves-effect width-md"> Hesap Kart Tür Listesine Geri Dön</a>

                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


